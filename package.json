{
    "name": "localndr",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "backend:up": "dotenv -e .env.dev -- docker compose -f ./backend/docker-compose.yaml up -d",
        "backend:down": "dotenv -e .env.dev -- docker compose -f ./backend/docker-compose.yaml down --volumes",
        "db:migrate": "dotenv -e .env.dev -- pnpm exec pg-migrations apply --directory ./db/migrations-server",
        "db:seed": "dotenv -e .env.dev -- node ./db/seed.js",
        "reset": "pnpm backend:down && pnpm backend:up && pnpm db:migrate && pnpm db:seed",
        "write-server": "dotenv -e .env.dev -- tsx write-server.ts",
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write ./src",
        "lint": "eslint ./src",
        "stylecheck": "eslint ./src && prettier --check ./src ./db"
    },
    "dependencies": {
        "@electric-sql/client": "1.0.0-beta.3",
        "@electric-sql/pglite": "^0.2.17",
        "@electric-sql/pglite-react": "^0.2.17",
        "@electric-sql/pglite-repl": "^0.2.17",
        "@electric-sql/pglite-sync": "^0.2.20",
        "@electric-sql/react": "1.0.0-beta.4",
        "@hono/node-server": "^1.13.8",
        "@radix-ui/react-dialog": "^1.1.6",
        "@radix-ui/react-dropdown-menu": "^2.1.6",
        "@radix-ui/react-label": "^2.1.2",
        "@radix-ui/react-popover": "^1.1.6",
        "@radix-ui/react-radio-group": "^1.2.3",
        "@radix-ui/react-scroll-area": "^1.2.3",
        "@radix-ui/react-separator": "^1.1.2",
        "@radix-ui/react-slot": "^1.1.2",
        "@tailwindcss/vite": "^4.0.9",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "dotenv": "^16.4.7",
        "hono": "^4.7.2",
        "lodash.debounce": "^4.0.8",
        "lucide-react": "^0.476.0",
        "next-themes": "^0.4.4",
        "postgres": "^3.4.5",
        "react": "^19.0.0",
        "react-day-picker": "8.10.1",
        "react-dom": "^19.0.0",
        "react-hook-form": "^7.54.2",
        "react-router": "^7.2.0",
        "react-toastify": "^11.0.5",
        "react-virtualized": "^9.22.6",
        "react-virtualized-auto-sizer": "^1.0.25",
        "react-window": "^1.8.11",
        "sonner": "^2.0.1",
        "tailwind-merge": "^3.0.2",
        "tailwindcss": "^4.0.9",
        "tailwindcss-animate": "^1.0.7",
        "uuid": "^11.1.0",
        "zod": "^3.24.2",
        "zustand": "^5.0.3"
    },
    "devDependencies": {
        "@databases/pg-migrations": "^5.0.3",
        "@eslint/js": "^9.21.0",
        "@faker-js/faker": "^9.5.1",
        "@types/lodash.debounce": "^4.0.9",
        "@types/node": "^22.13.5",
        "@types/pg": "^8.11.11",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@types/react-virtualized": "^9.22.2",
        "@types/react-window": "^1.8.8",
        "@types/uuid": "^10.0.0",
        "@vitejs/plugin-react": "^4.3.4",
        "dotenv-cli": "^8.0.0",
        "eslint": "^9.21.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^15.15.0",
        "prettier": "3.5.2",
        "tsx": "^4.19.3",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.24.1",
        "vite": "^6.2.0"
    }
}
